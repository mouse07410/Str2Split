{
    "cSpell.words": [
        "chunker"
    ],
    "git.autofetch": true,
    "actionButtons": {
        "commands": [
            {
                "cwd": "${workspaceFolder}",
                "name": "Cabal build",
                "color": "white",
                "singleInstance": true,
                "command": "cabal build"
            },
            {
                "cwd": "${workspaceFolder}",
                "name": "Cabal run",
                "color": "white",
                "singleInstance": true,
                "command": "cabal run ${workspaceFolderBasename}-exe"
            },
            {
                "cwd": "${workspaceFolder}",
                "name": "Cabal test",
                "color": "white",
                "singleInstance": true,
                "command": "cabal run ${workspaceFolderBasename}-test"
            }
        ]
    }
}