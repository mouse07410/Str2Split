{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Cabal build",
            "type": "shell",
            "command": "cabal build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Cabal run",
            "type": "shell",
            "command": "cabal run Str2Split-exe"
        },
        {
            "label": "Cabal test",
            "type": "shell",
            "command": "cabal run Str2Split-test"
        },
        {
            "label": "Cabal clean",
            "type": "shell",
            "command": "cabal clean"
        },
        {
            "label": "Stack build",
            "type": "shell",
            "command": "stack build",
            "group": "build"
        },
        {
            "label": "Stack run",
            "type": "shell",
            "command": "stack run"
        },
        {
            "label": "Stack clean",
            "type": "shell",
            "command": "stack clean"
        }
    ]
}